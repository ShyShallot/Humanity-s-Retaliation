        <Story_Dialog>Loyalty_Dialog</Story_Dialog>
        <Story_Chapter>1</Story_Chapter>
        <Story_Dialog_Popup>False</Story_Dialog_Popup>
        <Story_Tag>LOYALTY_DIS</Story_Tag>
    </Event>

    <Event Name="Planet_Lost_Sound_Rebel">
        <Event_Type>STORY_AI_NOTIFICATION</Event_Type>
        <Event_Param2>Planet_Lost</Event_Param2>
